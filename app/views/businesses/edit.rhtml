<% title "Editing #{h @business.name}" %>
<% body 'onload="loadFormHelp();"' %>
<h1><%= yield :title %></h1>

<%= error_messages_for :business %>

<% form_for(:business, :url => business_path(@business), :html => { :method => :put }) do |f| %>
<%= render :partial => "form", :locals => { :f => f } %>
<p><%= submit_tag "Update" %></p>
<% end %>