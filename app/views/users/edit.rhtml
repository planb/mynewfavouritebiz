<% title "Editing #{@user.login}&rsquo;s Details" %>
<h1><%= yield :title %></h1>

<%= error_messages_for :user %>

<% form_for(:user, :url => user_path(@user), :html => { :method => :put }) do |f| %>
  <fieldset>
	<legend><%= yield :title %></legend>
	<dl>
		<%= render :partial => "form", :locals => { :f => f } %>
	</dl>
    <%= submit_tag "Update" %>
</fieldset>
<% end %>